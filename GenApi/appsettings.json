{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft.AspNetCore.Mvc": "Warning",
                "Microsoft.AspNetCore.Routing": "Warning",
                "Microsoft.AspNetCore.Hosting": "Warning",
                "Microsoft.AspNetCore.Diagnostics.ExceptionHandlerMiddleware": "Fatal"
            }
        },
        "Using": ["Serilog.Enrichers.Thread", "Serilog.Sinks.File"],
        "Enrich": ["WithThreadId", "FromLogContext"],
        "WriteTo": [
            { "Name": "Console" },
            {
                "Name": "File",
                "Args": {
                    "path": "./logs/gen_.log",
                    "rollingInterval": "Day",
                    "outputTemplate": "[{Timestamp:dd/MM/yyyy HH:mm:ss}] [{Level:u3}] <{ThreadId}> ({Executor}) [{SourceContext}] {Message:lj}{NewLine}{Exception}",
                    "rollOnFileSizeLimit": true,
                    "retainedFileCountLimit": null
                }
            }
        ]
    },
    "AppSettings": {
        "ConnectionStrings":"Host=postgres;Port=5432;Database=mydb;Username=postgres;Password=postgres",
        "OpenSearch": {
            "NodeUris": "https://opensearch:9200",
            "UserName": "admin",
            "Password": "myGenApi@123",
            "AnimeIndex": "list-anime"
        },
        "RabbitMQ": {
            "Host": "rabbitmq",
            "Port": 5672,
            "QueueName": "anime-queue",
            "UserName": "guest",
            "Password": "guest"
        }
    }
}
